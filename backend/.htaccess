# Permitir archivos de autenticación específicos
<Files "auth/login.php">
    Order Allow,Deny
    Allow from all
</Files>

<Files "auth/logout.php">
    Order Allow,Deny
    Allow from all
</Files>

# Permitir directorio API completo
<FilesMatch "^api/.*\.php$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Denegar todo lo demás por defecto
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>